    <!-- Global Init -->
    <script src="assets/js/custom.js"></script>

    <script>

      window.addEventListener('load',function(){
        let name = document.getElementById("name");
        let ph = document.getElementById("phone");
        let mess = document.getElementById("message");
    
        name.addEventListener("input", (n) => {
          const nameval = n.currentTarget.value;
          if ( nameval.length<2 || name.validity.valueMissing ) {
            name.setCustomValidity("Name must be atleast 2 characters long.");
            name.reportValidity();
          } else { name.setCustomValidity(""); }
        });
    
        ph.addEventListener("input", (n) => {
          const phoneval = n.currentTarget.value;
          var pattern= /^\(?(\d{3})\)?[- ]?(\d{3})[- ]?(\d{4})$/;
          if ( !phoneval.match(pattern) || ph.validity.valueMissing ) {
            ph.setCustomValidity("Phone number must be valid.");
            ph.reportValidity();
          } else { ph.setCustomValidity(""); }
        });
    
      });
        
       

    </script>
